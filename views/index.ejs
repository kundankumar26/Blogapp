<% include partials/header %>


<div class="ui main text container centered">
     <div class="ui huge header"> Blog App</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blogs){ %>
                    <div class="item">
                        <div class="image">
                            <img src="<%=blogs.image%>">
                        </div>
                        <div class="content">
                            <a class="header" href="/blog/<%=blogs._id%>"> <%= blogs.title %> </a>
                            <div class="meta">
                                <span><h4> <%= blogs.created.toDateString() %></h4></span>
                            </div>
                            <div class="description">
                                <p> <%- blogs.body.substring(0,100) %></p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic green button" href="/blog/<%=blogs._id%>">
                                    Read More<i icon="right chevron icon"></i></a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
    


<% include partials/footer %>