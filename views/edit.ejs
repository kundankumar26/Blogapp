<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blogs.title %></div>
    <form action="/blog/<%=blogs._id%>?_method=PUT" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blogs.title %>">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="blog[image]" value="<%= blogs.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blogs.body %></textarea>
        </div>
        <input class="ui violet basic button big" type="submit">
    </form>
</div>

<% include partials/footer %>